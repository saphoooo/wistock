header {
	position: absolute;
	left: 0;
	top: 0;
	height: 80px;
	width: 100%;
	background: #5f04b4 url('../img/logo.png') no-repeat 50px 0px;
	background-size: 420px 75px;
	border-bottom: 1px solid #133783;
}

body {
	margin: 0;
	padding: 0;
	font-family: "Lucida Grande", Tahoma, Verdana, Arial, sans-serif;
	font-size: 12px;
	color: #000333;
}

body#baseAdmin section#content {
	position: absolute;
	top: 100px;
	width: 800px;
	left: 5%;
	margin: 0 0 0 100px;
	padding: 0;
}

body#baseAdmin section#userList {
	position: absolute;
	width: 600px;
	left: 0;
	background-color: red;
}

body#baseAdmin section#userProfile {
	position: absolute;
	width: auto;
	right: 0;
	background-color: yellow;
}

body#baseLoggedPage section#content {
	position: absolute;
	top: 100px;
	left: 5%;
	width: 1200px;
	margin: 0 0 0 -50px;
	padding: 0;
}

body#baseLoggedPage header p#user_logout {
	position: absolute;
	right: 10px;
	top: 5px;
}

h1 {
	text-align: center;
	font-size: 22px;
	color: #5f04b4;
	border-bottom: 1px solid #5f04b4;
	margin: 0px 300px 30px 300px;
}

table.center {
	margin-left:auto;
	margin-right:auto;
}

section#stockItems table {
	border-collapse: collapse;
	table-layout: fixed;
}

section#stockItems  tr, th {
	border-bottom: 1px solid #ddd;
	width: 100px;
}

section#stockItems  tr:hover {
	background-color: #f5f5f5
}


body#baseAdmin header p#user_logout {
        position: absolute;
        right: 10px;
        top: 5px;
}

body#baseLoggedPage header p#user_profile {
        position: absolute;
        right: 10px;
	top: 30px;
}

body#baseAdmin header p#user_profile {
	position: absolute;
	right: 10px;
	top: 30px;
}

body#homePage section#content {
	position: absolute;
	top: 100px;
	left: 5%;
	width: 500px;
	margin: 0 0 0 -50px;
	padding: 0;
}

body#loginPage section#content {
	position: absolute;
	top: 200px;
	left: 50%;
	width: 500px;
	margin: 0 0 0 -250px;
	padding: 0;
}

form label {
	display: block;
	width: 150px;
	float: left;
	text-align: right;
	padding: 4px 10px 0 0;
}

form input[type="email"], form input [type="text"], form input[type=password] {
	display: block;
	width: 250px;
	padding: 2px;
}

form input[type="submit"] {
	margin: 0 20px 0 160px;
	border-style: solid;
	border-width: 1px;
	border-color: #d9dfae #0e1f5b #0e1f5b #d9dfea;
	background-color: #5f04b4;
	color: #FFFFFF;
	padding: 2px 15px 3px 15px;
	text-align: center;
}

a {
	color: #3b5998;
}

a.buttonLink {
	border-style: solid;
	border-width: 0px;
	border-color: #000000 #000000 #000000 #000000;
	background-color: #FFFFFF;
	color: #5f04b4;
	padding: 2px 15px 3px 15px;
	text-align: center;
	text-decoration: none;
}
